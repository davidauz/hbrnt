<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings for H2 in-memory database -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:mem:test</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property> <!-- No password for H2 in-memory database -->

        <!-- Hibernate dialect for H2 -->
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Automatically create/update database schema (optional) -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <!-- and show the SQL PLZ -->
        <property name="hibernate.show_sql">true</property>

        <!-- Mapping files or annotated classes (using annotations) -->
        <mapping class="com.davidauz.hbrnt.entities.ExamplePojo"/>
        <mapping class="com.davidauz.hbrnt.entities.City"/>
        <mapping class="com.davidauz.hbrnt.entities.Mayor"/>

        <!-- Mapping for Implicit Polymorphism tests -->
        <mapping class="com.davidauz.hbrnt.entities.ImplicitPolymorphism.FurnitureSofa"/>
        <mapping class="com.davidauz.hbrnt.entities.ImplicitPolymorphism.FurnitureTable"/>
        <mapping class="com.davidauz.hbrnt.entities.TablePerClass.Ginseng"/>
        <mapping class="com.davidauz.hbrnt.entities.TablePerClass.Oak"/>

    </session-factory>
</hibernate-configuration>
